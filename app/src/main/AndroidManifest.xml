<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulima.sw.pizzaplanetac">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listado.ListadoPizzasActivity"
            android:parentActivityName=".Pedido.GridActivityT" />
        <activity
            android:name=".Pedido.GridActivityT"
            android:parentActivityName=".Login.LoginActivity" />
        <activity android:name=".ingredientes.IngredientesActivity"></activity>
    </application>

</manifest>